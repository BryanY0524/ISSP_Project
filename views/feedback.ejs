<!DOCTYPE html>
<html>

<head>
	<title>ISSP Feedback</title>
    <!-- Custom styles for this template -->
    <link href="/stylesheets/sb-admin-2.min.css" rel="stylesheet">
    <!-- Custom styles for this page -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/feedback.css">
    <link rel="stylesheet" href="/stylesheets/sd-admin_custom.css">
</head>

<body id="page-top">
	<!-- Page Wrapper -->
	<div id="wrapper">
		<%- include('./partials/dashboard_side_nav.ejs') %>
		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">
			<!-- Main Content -->
			<div id="content">

				<%- include('./partials/dashboard_top_nav.ejs') %>

				<!-- Begin Page Content -->
				<div class="container-fluid">
					<div class="detailBox">
						<div class="titleBox">
							<label>Comment Box</label>
						</div>
						<div class="commentBox">
							<p class="taskDescription">ID: <%= feedbackData.id %></p>
							<p>Date Created: <%= feedbackData.created_time %></p>
							<p>Company: <%= feedbackData.company_name %></p>
							<form action="/submission/updateCategory" method="POST">
								<input type="hidden" name="project_id" value="<%= feedbackData.id %>">
								<b>Category:</b>
								<div class="form-check mt-2">
									<%
										var options = [ "CIT", "CST", "Both", "Full Stack Development", "Not Assigned"];
										for ( var i = 0; i < options.length; i++ ) 
										{ var checked=( feedbackData.category == options[i] )? "checked" : ""
										; %>
									<input type="radio" class="form-check-input" name="category"
										value="<%=options[ i ] %>" <%=checked %>><%=options[i] %><br><%
										}
										%>
								</div>
								<div class="form-inline mt-2">
									<div class="form-group">
										<b>Year:</b>
										<input type="text" name="year" class="form-control"
											value="<%= feedbackData.year ? feedbackData.year : '' %>"> <br>
									</div>
								</div>
								<div class="form-inline mt-2">
									<div class="form-check">
										<b>Term:</b>
										<%
									  var options = [ "Winter", "Spring/Summer", "Fall", "Not Assigned" ];
									  for ( var i = 0; i < options.length; i++ ) 
									  { var checked=( feedbackData.term == options[i] )? "checked" : ""
										; %>
										<input type="radio" name="term" class="form-check-input"
											value="<%=options[ i ] %>" <%=checked %>><label
											class="mr-1"><%=options[i]%></label>
										<%
									  }
									  %>
									</div>
								</div>
								<div class="form-group mt-4">
									<input type="submit" class="btn btn-success mr-4" value="Assign" />
								</div>
							</form>
						</div>
						<form class="form" action="/submission/submitFeedback" method="POST">
							<input type="hidden" name="project_id" value="<%= feedbackData.id %>">
							<div class="actionBox">
								<ul class="commentList">
									<% if (returnData.length !=0) { %>
									<% for(var i=0; i < returnData.length ; i++) { %>
									<li>
										<div class="commenterImage">
											<img src="http://placekitten.com/50/50" />
										</div>
										<div class="commentText">
											<p><%= returnData[i].feedback_user%></p>
											<p><%= returnData[i].feedback%></p> <span class="date sub-text"> on
												<%= returnData[i].feedback_time %></span>
										</div>
									</li>
									<% } %>
									<% } else { %>
									<li>
										<div class="commentText">
											<p>No Comment</p>
										</div>
									</li>
									<% } %>
								</ul>
							</div>
							<div class="form-group">
								<textarea name="feedback" rows="8" class="form-control" required
									placeholder="Your comments......"></textarea>
							</div>
							<div class="form-group">
								<input type="submit" class="btn btn-success mr-4" value="Post" />
								<button type="button" class="btn btn-danger"
									onclick="location.href='/submissionList'">Cancel</button>
							</div>
						</form>
					</div>
				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->
		</div>
		<!-- End of Content Wrapper -->
	</div>
	<!-- End of Page Wrapper -->

	<!-- Bootstrap core JavaScript-->
	<script src="/vendor/jquery/jquery.min.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages -->
	<script src="/js/sb-admin-2.min.js"></script>

	<!-- Page level plugins -->
	<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
	<script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

</body>

</html>