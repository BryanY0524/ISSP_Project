<!DOCTYPE html>
<html>
<head>
    <title>ISSP Submission Edit</title>
    <!-- Custom styles for this template -->
    <link href="/stylesheets/sb-admin-2.min.css" rel="stylesheet">
    <!-- Custom styles for this page -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/sd-admin_custom.css">
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <%- include('./partials/dashboard_side_nav.ejs') %>
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <%- include('./partials/dashboard_top_nav.ejs') %>
                    
                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                      <form action="/submission/update" method="POST">

                        <h1>Project Detail</h1>
                        <b>id:<%= data.id %> </b>
                        <input type="hidden" name="id" value="<%= data.id %>">
                        <br>
                        <b>Date Created: <%= data.created_time %> </b>
                        <br>
                        <br>
                        <h2>Company</h2>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Company Name: </b>
                            <input type="text" name="company_name" class="form-control"
                              value="<%= data.company_name ? data.company_name : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Street:</b>
                            <input type="text" name="street_address" class="form-control"
                              value="<%= data.street_address ? data.street_address : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Address Line 2:</b>
                            <input type="text" name="address_line_2" class="form-control"
                              value="<%= data.address_line_2 ? data.address_line_2 : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>City:</b>
                            <input type="text" name="city" class="form-control" value="<%= data.city ? data.city : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Province:</b>
                            <select name="province" class="form-control">
                        <%
                          var province_lable = [ "British Columbia", "Alberta", "Manitoba" ];
                          var options = ["BC", "AB", "MA"]
                          for ( var i = 0; i < options.length; i++ ) 
                          { var selected=( data.province == options[i] )? "selected" : ""
                          ; %>
                              <option value="<%=options[ i ] %>" <%=selected %>><%=province_lable[i] %></option><%
                          }
                        %>
                            </select>
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Postal Code:</b>
                            <input type="text" name="postal_code" class="form-control"
                              value="<%= data.postal_code ? data.postal_code : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Phone:</b>
                            <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone" class="form-control"
                              value="<%= data.phone ? data.phone : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Website: </b>
                            <input type="text" name="website" class="form-control" value="<%= data.website ? data.website : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-check">
                            <b>Non Profit Organization: </b>
                            <% var checked=( data.non_profit_organization == "on")? "checked" : "" %>
                            <input type="checkbox" name="non_profit_organization" class="form-check-input ml-1" value="on" <%=checked %>>
                          </div>
                        </div>
                        <br>
                        <div class="form-group">
                          <b>Company/Business profile:</b><br>
                          <textarea name="company_business_profile" class="form-control" style="width:40%"
                            rows="10"><%= data.company_business_profile %></textarea>
                        </div>
                        <br>
                        <h2>Contact Person</h2>
                    
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Salutation: </b>
                            <select name="prefix" class="form-control">
                        <%
                          var prefix_lable = [ "Mr.", "Mrs.", "Ms." ];
                          var options = ["mr", "mrs", "ms"]
                          for ( var i = 0; i < options.length; i++ ) 
                          { var selected=( data.prefix == options[i] )? "selected" : ""; %>
                              <option value="<%=options[ i ] %>" <%=selected %>><%=prefix_lable[i] %></option><%
                          }
                        %>
                            </select>
                          </div>
                        </div>
                        <br>
                    
                        <div class="form-inline">
                          <div class="form-group">
                            <b>First Name: </b>
                            <input type="text" name="first" class="form-control" value="<%= data.first ? data.first : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Last Name: </b>
                            <input type="text" name="last" class="form-control" value="<%= data.last ? data.last : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Position Name: </b>
                            <input type="text" name="position" class="form-control" value="<%= data.position ? data.position : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Phone: </b>
                            <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="personal_phone" class="form-control"
                              value="<%= data.personal_phone ? data.personal_phone : '' %>">
                          </div>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-group">
                            <b>Email: </b>
                            <input type="text" name="email" class="form-control" value="<%= data.email ? data.email : '' %>">
                          </div>
                        </div>
                        <br>
                        <br>
                        <h2>Project</h2>
                    
                    
                        <b>Project area</b>
                        <div class="form-check">
                        <%
                          var project_list = data.project_area.split(',');
                          var options = [ "DevOps", "Networking", "Web Development","Mobile Development","Scripting/IT","Games","AR/VR", "Machine Learning/Algorithms/Research","Other"];
                          for ( var i = 0; i < options.length; i++ ) 
                          { var checked=( project_list[i] == options[i] )? "checked" : ""; %>
                          <input type="checkbox" name="project_area" class="form-check-input" value="<%=options[ i ] %>"
                            <%=checked %>/> <%=options[i] %><br><%
                          }
                        %>
                        </div>
                        <br>
                        <div class="form-group">
                          <b>Project Description:</b><br>
                          <textarea name="project_description" rows="10" class="form-control"
                            style="width:40%"><%= data.project_description %></textarea>
                        </div>
                        <br>
                        <div class="form-group">
                          <b>Project Duration/Timing</b> <br>
                          <textarea name="project_duration" rows="10" class="form-control"
                            style="width:40%"><%= data.project_duration %></textarea>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-check">
                            <b>No preference on the duration or timing on the project: </b>
                            <% var checked=( data.project_duration_no_preference == "on")? "checked" : "" %>
                            <input type="checkbox" name="project_duration_no_preference" class="form-check-input ml-1" value="on" <%=checked %>>
                    
                          </div>
                        </div>
                        <br>
                        <div class="form-group">
                          <b>Description of the current arrangement: </b> <br>
                          <textarea name="current_arrangement" rows="10" class="form-control"
                            style="width:40%"><%= data.current_arrangement %></textarea>
                        </div>
                        <br>
                        <div class="form-group">
                          <b>Programming language or languages would be used: </b><br>
                          <textarea name="programming_language" rows="10" class="form-control"
                            style="width:40%"><%= data.programming_language %></textarea>
                        </div>
                        <br>
                        <div class="form-group">
                          <b>Hardware & Software Requirements:</b><br>
                          <textarea name="hardware_software_requirements" rows="10" class="form-control"
                            style="width:40%"><%= data.hardware_software_requirements %></textarea>
                        </div>
                        <br>
                        <div class="form-inline">
                          <div class="form-check">
                            <b>Continuation of a previous student project: </b>
                        <%
                          var options = [ "yes", "no"];
                          for ( var i = 0; i < options.length; i++ ) 
                          { var checked=( data.continuation_project == options[i] )? "checked" : "" ; %>
                            <input type="radio" name="continuation_project" class="form-check-input" value="<%=options[ i ] %>"
                              <%=checked %>><label class="mr-1"><%=options[i] %></label>
                            <%
                          }
                        %>
                          </div>
                        </div>
                        <br>
                    
                        <b>Hear about ISSP</b><br>
                        <div class="form-check">
                        <%
                          var options = [ "BCIT's website", "BCIT email message", "BCIT internal announcements", "Ad on LinkedIn", "Ad on T-Net", "Company I work for", "BC Technology Industry", "BC Innovation Council"];
                          if (data.hear_about_ISSP == null || options.includes(data.hear_about_ISSP)) {
                            options.push("Other")
                          }
                          else {
                            options.push(data.hear_about_ISSP)
                          }
                          for ( var i = 0; i < options.length; i++ ) 
                            { var checked=( data.hear_about_ISSP == options[i] )? "checked" : "" ; %>
                            <input type="radio" name="hear_about_ISSP" class="form-check-input" value="<%=options[ i ] %>"
                              <%=checked %>><label><%=options[i] %></label><br>
                          <% } %>
                        </div>
                        <div class="form-inline">
                          <div class="form-check">
                            <b>Sponsor Commitments: </b>
                            <% var checked=( data.sponsor_commitments == "on")? "checked" : "" %>
                            <input type="checkbox" name="sponsor_commitments" class="form-check-input ml-1" value="on" <%=checked %>>
                          </div>
                        </div>
                        <br>
                        <div class="form-group">
                          <input type="submit" class="btn btn-success mr-4" value="Submit" />
                          <button type="button" class="btn btn-danger" onclick="location.href='/submissionList'">Cancel</button>
                        </div>
                       
                      </form>
                      
                    </div>
                    <!-- /.container-fluid -->
    
                </div>
                <!-- End of Main Content -->
            </div>
            <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages -->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

</body>
</html>