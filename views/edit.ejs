<!DOCTYPE html>
<html>
<head>
    <title>ISSP Submission Edit</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/android-chrome-192x192.png">
    <!-- Custom styles for this template -->
    <link href="/stylesheets/sb-admin-2.min.css" rel="stylesheet">
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this page -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/sd-admin_custom.css">
    <link rel="stylesheet" href="/stylesheets/edit.css">
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <%- include('./partials/dashboard_side_nav.ejs') %>
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <%- include('./partials/dashboard_top_nav.ejs') %>
                    
                    <!-- Begin Page Content -->
                    <div class="container-fluid edit">

                      <form action="/submission/update" method="POST">
                        <div class="mb-4">
                          <h1>Project Detail</h1>
                          <b>id:<%= data.id %> </b>
                          <input type="hidden" name="id" value="<%= data.id %>">
                          <br>
                          <b>Date Created: <%= data.created_time %> </b>
                        </div>
                          <h2 class="mb-3">Company</h2>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="company_name" class="font-weight-bold">Company Name:</label>
                            <input type="text" name="company_name" id="company_name" class="form-control"
                              value="<%= data.company_name ? data.company_name : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="street" class="font-weight-bold">Street:</label>
                            <input type="text" name="street_address" id="street" class="form-control"
                              value="<%= data.street_address ? data.street_address : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="address_line_2" class="font-weight-bold">Address Line 2:</label>
                            <input type="text" name="address_line_2" id="address_line_2" class="form-control"
                              value="<%= data.address_line_2 ? data.address_line_2 : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="city" class="font-weight-bold">City:</label>
                            <input type="text" name="city" id="city" class="form-control " value="<%= data.city ? data.city : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="province" class="font-weight-bold">Province:</label>
                            <select name="province" class="form-control">
                        <%
                          var province_lable = [ "British Columbia", "Alberta", "Manitoba" ];
                          var options = ["BC", "AB", "MA"]
                          for ( var i = 0; i < options.length; i++ ) 
                          { var selected=( data.province == options[i] )? "selected" : ""
                          ; %>
                              <option value="<%=options[ i ] %>" <%=selected %>><%=province_lable[i] %></option><%
                          }
                        %>
                            </select>
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="post_code" class="font-weight-bold">Postal Code:</label>
                            <input type="text" name="postal_code" id="post_code" class="form-control"
                              value="<%= data.postal_code ? data.postal_code : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="phone" class="font-weight-bold">Phone:</label>
                            <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone" id="phone" class="form-control"
                              value="<%= data.phone ? data.phone : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="website" class="font-weight-bold">Website:</label>
                            <input type="text" name="website" id="website" class="form-control" value="<%= data.website ? data.website : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-check">
                            <label for="non_profit_organization" class="font-weight-bold">Non Profit Organization:</label>
                            <% var checked=( data.non_profit_organization == "on")? "checked" : "" %>
                            <input type="checkbox" name="non_profit_organization" id="non_profit_organization" class="form-check-input ml-1" value="on" <%=checked %>>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="company_business_profile" class="font-weight-bold">Company/Business profile:</label>
                          <textarea name="company_business_profile" id="company_business_profile"  class="form-control" style="width:50%"
                            rows="10"><%= data.company_business_profile %></textarea>
                        </div>
                        <h2 class="mb-3">Contact Person</h2>
                    
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="salutation" class="font-weight-bold">Salutation:</label>
                            <select name="prefix" id="salutation" class="form-control">
                        <%
                          var prefix_lable = [ "Mr.", "Mrs.", "Ms." ];
                          var options = ["mr", "mrs", "ms"]
                          for ( var i = 0; i < options.length; i++ ) 
                          { var selected=( data.prefix == options[i] )? "selected" : ""; %>
                              <option value="<%=options[ i ] %>" <%=selected %>><%=prefix_lable[i] %></option><%
                          }
                        %>
                            </select>
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="first" class="font-weight-bold">First Name:</label>
                            <input type="text" name="first" id="first" class="form-control" value="<%= data.first ? data.first : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="last" class="font-weight-bold">Last Name:</label>
                            <input type="text" name="last" id="last" class="form-control" value="<%= data.last ? data.last : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="position" class="font-weight-bold">Position Name:</label>
                            <input type="text" name="position" id="position" class="form-control" value="<%= data.position ? data.position : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="personal_phone" class="font-weight-bold">Phone:</label>
                            <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="personal_phone" id="personal_phone" class="form-control"
                              value="<%= data.personal_phone ? data.personal_phone : '' %>">
                          </div>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-group">
                            <label for="email" class="font-weight-bold">Email:</label>
                            <input type="text" name="email" id="email" class="form-control" value="<%= data.email ? data.email : '' %>">
                          </div>
                        </div>
                        <h2 class="mb-3">Project</h2>
                        <label for="project_area" class="font-weight-bold">Project Area:</label>
                        <div class="form-check mb-3">
                          <%
                            var project_list = data.project_area.split(',');
                            var options = [ "DevOps", "Networking", "Web Development","Mobile Development","Scripting/IT","Games","AR/VR", "Machine Learning/Algorithms/Research","Other"];
                            for ( var i = 0; i < options.length; i++ ) 
                            { var checked=( project_list[i] == options[i] )? "checked" : ""; %>
                            <input type="checkbox" name="project_area" id="project_area" class="form-check-input" value="<%=options[ i ] %>"
                              <%=checked %>/> <%=options[i] %><br><%
                            }
                          %>
                        </div>
                        <div class="form-group mb-3">
                          <label for="project_description" class="font-weight-bold">Project Description:</label>
                          <textarea name="project_description" id="project_description" rows="10" class="form-control"
                            style="width:50%"><%= data.project_description %></textarea>
                        </div>
                        <div class="form-group mb-3">
                          <label for="project_duration" class="font-weight-bold">Project Duration/Timing:</label>
                          <textarea name="project_duration" id="project_duration" rows="10" class="form-control"
                            style="width:50%"><%= data.project_duration %></textarea>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-check">
                            <label for="project_duration_no_preference" class="font-weight-bold">No preference on the duration or timing on the project:</label>
                            <% var checked=( data.project_duration_no_preference == "on")? "checked" : "" %>
                            <input type="checkbox" name="project_duration_no_preference" id="project_duration_no_preference" class="form-check-input ml-1" value="on" <%=checked %>>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="current_arrangement" class="font-weight-bold">Description of the current arrangement:</label>
                          <textarea name="current_arrangement" id="current_arrangement" rows="10" class="form-control"
                            style="width:50%"><%= data.current_arrangement %></textarea>
                        </div>
                        <div class="form-group">
                          <label for="programming_language" class="font-weight-bold">Programming language or languages would be used:</label>
                          <textarea name="programming_language" id="programming_language" rows="10" class="form-control"
                            style="width:50%"><%= data.programming_language %></textarea>
                        </div>
                        <div class="form-group">
                          <label for="hardware_software_requirements" class="font-weight-bold">Hardware & Software Requirements:</label>
                          <textarea name="hardware_software_requirements" id="hardware_software_requirements" rows="10" class="form-control"
                            style="width:50%"><%= data.hardware_software_requirements %></textarea>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-check">
                            <label for="continuation_project" class="font-weight-bold">Continuation of a previous student project:</label>
                        <%
                          var options = [ "yes", "no"];
                          for ( var i = 0; i < options.length; i++ ) 
                          { var checked=( data.continuation_project == options[i] )? "checked" : "" ; %>
                            <input type="radio" name="continuation_project" id="continuation_project" class="form-check-input ml-1" value="<%=options[ i ] %>"
                              <%=checked %>><label class="mr-1"><%=options[i] %></label>
                            <%
                          }
                        %>
                          </div>
                        </div>
                        <label for="hear_about_ISSP" class="font-weight-bold">Hear about ISSP:</label>
                        <div class="form-check">
                        <%
                          var options = [ "BCIT's website", "BCIT email message", "BCIT internal announcements", "Ad on LinkedIn", "Ad on T-Net", "Company I work for", "BC Technology Industry", "BC Innovation Council"];
                          if (data.hear_about_ISSP == null || options.includes(data.hear_about_ISSP)) {
                            options.push("Other")
                          }
                          else {
                            options.push(data.hear_about_ISSP)
                          }
                          for ( var i = 0; i < options.length; i++ ) 
                            { var checked=( data.hear_about_ISSP == options[i] )? "checked" : "" ; %>
                            <input type="radio" name="hear_about_ISSP" id="hear_about_ISSP" class="form-check-input" value="<%=options[ i ] %>"
                              <%=checked %>><label><%=options[i] %></label><br>
                          <% } %>
                        </div>
                        <div class="form-inline mb-3">
                          <div class="form-check">
                            <label for="sponsor_commitments" class="font-weight-bold">Sponsor Commitments:</label>
                            <% var checked=( data.sponsor_commitments == "on")? "checked" : "" %>
                            <input type="checkbox" name="sponsor_commitments" id="sponsor_commitments" class="form-check-input ml-1" value="on" <%=checked %>>
                          </div>
                        </div>
                        <div class="form-group">
                          <input type="submit" class="btn btn-success mr-4" value="Submit" />
                          <button type="button" class="btn btn-danger" onclick="location.href='/submissionList'">Cancel</button>
                        </div>
                      </form>
                      
                    </div>
                    <!-- /.container-fluid -->
    
                </div>
                <!-- End of Main Content -->
            </div>
            <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/jquery-cookie.js"></script>
    <script src="/js/sb-admin-2.js"></script>

    <!-- Page level plugins -->
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

</body>
</html>